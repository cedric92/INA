<Window x:Class="DV_CreateFile.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Neue Datei erstellen" Height="171.375" Width="313" ResizeMode="CanMinimize">
    <Grid HorizontalAlignment="Left" Width="317" Margin="0,0,0,-1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="165*"/>
            <ColumnDefinition Width="163*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Zeilenanzahl:" HorizontalAlignment="Left" Margin="11,13,0,0" VerticalAlignment="Top" Width="117" Height="26"/>
        <TextBox x:Name="txtLines" HorizontalAlignment="Left" Height="23" Margin="112,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" TextChanged="TextBox_TextChanged" Text="10" Grid.ColumnSpan="2"/>
        <Button x:Name="btCreate" Content="Erstellen" HorizontalAlignment="Left" Margin="48,98,0,0" VerticalAlignment="Top" Width="75" Click="btCreate_Click" Grid.Column="1" Height="22"/>

        <CheckBox x:Name="chbBuggy" Content="Text in zufälliger Zeile" HorizontalAlignment="Left" Margin="112,44,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <CheckBox x:Name="chbWrongamount" Content="Nicht ausgeglichen" HorizontalAlignment="Left" Margin="112,65,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>


    </Grid>
</Window>
