        <TextBlock x:Name="txtContent" HorizontalAlignment="Left" Margin="35,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="30" Width="310"/>
        <Button x:Name="btStart" Content="Start" HorizontalAlignment="Left" Margin="51,262,0,0" VerticalAlignment="Top" Width="90" Height="30"/>
        <Button x:Name="btAnhalten" Content="Anhalten" HorizontalAlignment="Left" Margin="214,262,0,0" VerticalAlignment="Top" Width="90" Height="30" Click="Button_Click_1"/>
        <Button x:Name="btBeenden" Content="Beenden" HorizontalAlignment="Left" Margin="375,262,0,0" VerticalAlignment="Top" Width="90" Height="30" Click="btBeenden_Click"/>
